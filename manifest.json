{
  "name": "Stream Radio Player",
  "version": "1.0",
  "description": "Manage and listen to web radio stations",
  "permissions": ["storage","tabs"],
  "options_page": "views/options.html",
  "background": {
    "page" : "views/background.html",
    "persistent": false
  },
  "browser_action": {
    "default_popup": "views/player.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
